{% import "_includes/forms" as forms %}

{% includeCssResource "usercreator/css/UserCreator_Style.css" %}
{% includeJsResource "usercreator/js/UserCreator_Script.js" %}

{{ forms.checkboxGroup({
    label: 'Default user groups',
    instructions: 'Assign users to one or more default group',
    id: 'defaultUserGroups',
    name: 'defaultUserGroups',
    options: [
        {
            label: 'Test group',
            value: 1
        }
    ],
    }) }}

{{ forms.lightswitchField({
    label: 'Activate users',
    id: 'activateUsers',
    name: 'activateUsers',
    on: settings['activateUsers']})
}}

{{ forms.lightswitchField({
    label: 'Force password reset',
    instructions: 'Forces password reset when user logs in for the first time.',
    id: 'forcePasswordReset',
    name: 'forcePasswordReset',
    on: settings['forcePasswordReset']})
}}

{{ forms.lightswitchField({
    label: 'Create reset links',
    id: 'createResetLinks',
    name: 'createResetLinks',
    on: settings['createResetLinks']})
}}